<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_image1"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/Korean_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="72dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="@drawable/korean_mark_button"/>

    <ImageButton
        android:id="@+id/Usa_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="72dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/usa_mark_button" />

    <ImageButton
        android:id="@+id/China_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="72dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/china_mark" />

    <ImageButton
        android:id="@+id/Japan_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="72dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/japan_mark" />
    
    <ImageView
        android:id="@+id/intro_exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_gravity="bottom"
        android:src="@drawable/exit_icon"/>

</LinearLayout>